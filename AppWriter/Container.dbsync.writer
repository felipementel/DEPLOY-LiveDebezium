FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build-env
WORKDIR /app
# Copy everything
COPY . ./
# Restore as distinct layers
RUN dotnet restore BD.SYNC.Writer/BD.SYNC.Writer.csproj
# Build and publish a release
RUN dotnet publish BD.SYNC.Writer/BD.SYNC.Writer.csproj -c Release -o out

#Run
FROM mcr.microsoft.com/dotnet/aspnet:6.0
WORKDIR /app
COPY --from=build-env /app/out .
RUN ldconfig
ENTRYPOINT ["dotnet", "BD.SYNC.Writer.dll"]